        /// Búsqueda  de $Entidad$.
        /// </summary>
        /// <param name="pBE">Entidad.</param>
        /// <returns>$Entidad$Entities</returns>
        public static $Entidad$Entities Search($Entidad$Entity pBE)
        {
            try
            {
                return $Entidad$DataAccessComponent.Search(pBE);
            }
            catch (Exception ex)
            {
                throw ex;
            }
        }

        /// <summary>
        /// Inserta $Entidad$.
        /// </summary>
        /// <param name="pBE">Entidad.</param>
        /// <returns>Int32</returns>
