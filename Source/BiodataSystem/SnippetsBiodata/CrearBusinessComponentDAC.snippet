        /// <summary>
        /// Actualiza $Entidad$.
        /// </summary>
        /// <param name="pBE">Entidad.</param>
        /// <returns>Int32</returns>
        public static Int32 Update($Entidad$Entity pBE)
        {
            try
            {
                return $Entidad$DataAccessComponent.Update(pBE);
            }
            catch (Exception ex)
            {
                throw ex;
            }
        }
    
    }
}    
